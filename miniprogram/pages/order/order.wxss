/* pages/order/order.wxss */
page{
  background-color: #eee;
}

.no-order{
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 0;
    left: 0;
    right: 0;
    text-align: center;
    padding-top: 203rpx;
    background-color: #F2f2f2;
    
}
.no-order-img{
    width: 81rpx;
    height: 96rpx;
    margin-bottom: 31rpx;
}
.no-order .text{
    font-size:28rpx;
    color:#999999;
    text-align: center
}
.orderlist{
  width: 720rpx;
  height: 380rpx;
  align-self: center;
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10px;
  border: 2rpx solid rgb(223, 222, 222);
}

.img{
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  border: 2rpx solid rgb(223, 222, 222);
}

.imgtext{
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
}
.servicetext{
  font-size: 30rpx;
  margin-left: 50rpx;
  padding-top: 30rpx;
}


.delete{
  background-color: white;
  border: 3rpx solid #999999;
  width: 300rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  text-align: center;
  border-radius: 10px;
  position: absolute;
  right: 40rpx;
  margin-top: 25rpx;

}
.color{
  color: red;
  
}
